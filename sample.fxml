<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="375.0" prefWidth="322.0">
         <children>
            <TextField fx:id="Us" layoutX="87.0" layoutY="116.0" onAction="#UsTxt" />
            <PasswordField fx:id="Pass" layoutX="87.0" layoutY="149.0" onAction="#PasTxt" />
            <Label layoutX="28.0" layoutY="120.0" text="User" />
            <Label layoutX="28.0" layoutY="153.0" text="Password " />
            <Button fx:id="Login" layoutX="112.0" layoutY="194.0" mnemonicParsing="false" onAction="#BtnGuardar" text="LOGIN(Guardar)" />
            <Button fx:id="NewAcc" layoutX="111.0" layoutY="275.0" mnemonicParsing="false" onAction="#Newacc" text="NEW ACCOUNT" />
            <Label layoutX="111.0" layoutY="258.0" text="New user? create a " />
            <Button fx:id="Exit" layoutX="140.0" layoutY="333.0" mnemonicParsing="false" onAction="#Exit" text="EXIT" />
            <ImageView fitHeight="78.0" fitWidth="200.0" layoutX="63.0" layoutY="26.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.JPG" />
               </image>
            </ImageView>
            <Label fx:id="LoginLabel" alignment="TOP_CENTER" layoutX="87.0" layoutY="219.0" prefHeight="17.0" prefWidth="149.0" textAlignment="CENTER" textFill="#05a818" />
            <Label fx:id="CreateLabel" alignment="TOP_CENTER" layoutX="84.0" layoutY="302.0" prefHeight="17.0" prefWidth="149.0" textAlignment="CENTER" textFill="#d31319" />
         </children>
      </Pane>
   </children>
</GridPane>
